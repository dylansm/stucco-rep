- title 'Manage Users'

%h2 Manage Users

= paginate @users

%h3 Users
= link_to "Add new user", new_user_path
%table
  %thead
    %tr
      %th First Name
      %th Last Name
      %th Email
      %th Last Sign In
      %th{:colspan => "3"} Manage
  %tbody
    - @users.each do |u|
      %tr
        %td= u.first_name
        %td= u.last_name
        %td= u.email
        %td= u.last_sign_in_at
        %td= link_to "View", "users/#{u.id}"
        %td= link_to "Edit", "/users/#{u.id}/edit"
        %td= link_to "Suspend", "#", { class: "suspend-user", :"data-id" => "#{u.id}", remote: true }
        %td= link_to "Delete", "#", { class: "delete-user", :"data-id" => "#{u.id}", remote: true }
