- title t("page_titles.newsfeed")
- attributes({ :"data-user-id" => "#{current_user.id}" })

.rightwrapper.dark.new-post

  = simple_form_for([:newsfeed, @post], html: { data: { remote: true, type: :json } }) do |f|
    = f.input :text, as: :text, label: false, placeholder: "Write a new postâ€¦"
    = f.input :post_image, as: :file
    .secondary-inputs
      .photo-video-upload
        .photo-upload
          = f.input :video_url
    = simple_fields_for :user do |user_fields|
      = f.association :user, as: :hidden
    = f.submit

#posts-container{ :"data-pages" => @num_pages }

%a#more-posts= t('links.load_more_posts')

= render "dashboard/admin/admin_tools"
