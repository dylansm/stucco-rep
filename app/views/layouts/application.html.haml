!!!
%html
  %head
    %title= full_title(yield :title)
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    = render "shared/login"

    - if user_signed_in?
      = link_to "Profile", user_path

    %p.notice= notice
    %p.alert= alert
    = yield
