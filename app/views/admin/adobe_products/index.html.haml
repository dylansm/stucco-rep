- title t('page_titles.manage_adobe_products')

.rightwrapper
  %h2= t('headers.manage_adobe_products')

  = link_to t("links.dashboard.manage_adobe_products.add"), new_admin_adobe_product_path, { :class => "small button"}
  %table{ :"data-delete-confirm" => "#{@delete_confirm}" }
    %thead
      %tr
        %th
          %p Name
        %th 
          %p Mnemonic
        %th.ctr{:colspan => "2"}
          %p Manage
    %tbody
      - @adobe_products.each do |ap|
        %tr
          %td
            %p= link_to ap.name, edit_admin_adobe_product_path(ap)
          %td.ctr
            %p= link_to(image_tag(ap.mnemonic.url(:sm), class: "mnemonic-sm"), edit_admin_adobe_product_path(ap))
          %td
            %p= link_to t("links.edit"), edit_admin_adobe_product_path(ap)
          %td
            %p= link_to t("links.delete"), "#", { class: "delete-row", :"data-path" => "/admin/adobe_products/#{ap.id}", :"data-id" => "#{ap.id}", remote: true }

  = paginate @adobe_products
